<div class="portlet-body form">
  <%= form_for(@monster) do |f| %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <div id="errors">
        <% if @monster.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@monster.errors.count, "error") %> prohibited this monster from being saved:</h2>

              <ul>
                <% @monster.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
      </div>
      <div class="form-body">
        <div class="form-group">
          <label>Name</label>

          <div class="input-group">
            <%= f.text_field :name, :autofocus => true, :class => "form-control", :placeholder => "Name" %>
          </div>
        </div>
        <div class="form-group">
          <label>Type</label>

          <div class="input-group">

            <%= select_tag("monster[monster_type_id]", options_for_select(MonsterType.all.map { |monster_type| [monster_type.name, monster_type.id] }, @monster.id.blank?  ? nil : @monster.monster_type.id), :class => "form-control") %>
          </div>
        </div>
      <div class="form-actions">
        <!--<button class="btn blue" type="submit">Update</button>-->
        <%= f.submit "Save", :class => "btn blue" %>

      </div>

  <% end %>
</div>
</div>