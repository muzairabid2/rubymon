<div class="portlet-body form">
  <%= form_for(@team) do |f| %>
      <%= f.hidden_field :user_id, :value => current_user.id %>
      <div id="errors">
        <% if @team.errors.any? %>
            <div id="error_explanation">
              <h2><%= pluralize(@team.errors.count, "error") %> prohibited this monster from being saved:</h2>

              <ul>
                <% @team.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                <% end %>
              </ul>
            </div>
        <% end %>
      </div>
      <div class="form-body">
        <div class="form-group">
          <label>Name</label>

          <div class="input-group">
            <%= f.text_field :name, :autofocus => true, :class => "form-control", :placeholder => "Name" %>
          </div>
        </div>

      <div class="form-actions">
        <!--<button class="btn blue" type="submit">Update</button>-->
        <%= f.submit "Save", :class => "btn blue" %>

      </div>

  <% end %>
  </div>
